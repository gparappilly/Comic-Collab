    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<style>
body  {
    background-image: url("color/lightcomicwall.png");
}
</style>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <a class="navbar-brand" href="../home">ComicCollab</a>
        <div class="navbar-header">
            <form class="navbar-form" role="search" method="post">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>

            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul>
                <%if (cur.getIsLoggedIn()){%>
                <a href="uploadcomics/" class="btn btn-info" role="button" id='button_createComic'>Create Comic</a>
                <a href="myprofile" class="btn btn-info" role="button" id='button_profile'>Profile</a>
                <a href="userlist" class="btn btn-info" role="button" id='button_createComic'>Users</a>
                <a href="logout" class="btn btn-info" role="button" id='button_logout'>Logout</a>
                <% }else {%>
                <a href="register" class="btn btn-info" role="button" id='button_createprofile'>Register</a>
                <a href="login" class="btn btn-info" role="button" id='button_login'>Login</a>
                <%}%>
            </ul>

        </div><!--/.navbar-collapse -->
    </div>
</nav>
<div class="container">
    <div class="page-header" style="margin-top: 60px">
        <select class="selectpicker" data-live-search="true">
            <option>Sort by Views</option>
            <option>Sort by likes</option>
        </select>
    </div>
</div>


<div class="container">
    <div style="min-width: 1250px">
        <% for (var i=urls.length-1; i>=0; i--) { %>
        <a href="<%=comicIds[i]%>">
            <img style="width: 300px; height:300px" src="<%= urls[i]%>" />
        </a>
        <% } %>
    </div>
</div>

<div class="container">

    <footer>
        <p>&copy; ComicCollab  </p>
    </footer>
</div> <!-- /container -->


