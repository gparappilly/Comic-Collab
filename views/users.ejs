<html>
<head>
    <title></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <a class="navbar-brand" href="../home">ComicCollab</a>
    </div>
</nav>
<div class="container">
    <div class="page-header" style="margin-top: 60px">
        <br>
        <h1><b><%= userName %></b></h1>
    </div>
    <div class="col-lg-6">
        <h4>Name</h4>
        <p><%= fullname %></p>
        <h4>Age</h4>
        <p><%= age %></p>
        <h4>Gender</h4>
        <p><%= gender %></p>
        <h4>Location</h4>
        <p><%= location %></p>
        <h4>About Me</h4>
        <p><%= aboutme %></p>
        <br>
        <br>
        <h3>Check out <%= userName %>'s other artwork</h3>
        <!--deviantartstart -->
        <% if (deviantartusername != "N/A") { %>
        <h4><a href = "http://www.<%= deviantartusername%>.deviantart.com">DeviantArt</a></h4>
        
        <% if (deviantartimages.length > 10) { %>
        <% for (var m = 0; m < 10; m++) { %>
        <a href=<%= devianturls[m] %>><img style="height:170px" src=<%= deviantartimages[m] %> /></a>
        <% } %>
        <% } else { %>
        <% for (var m = 0; m < deviantartimages.length; m++) { %>
        <a href=<%= devianturls[m] %>><img style="height:170px" src=<%= deviantartimages[m] %> /></a>
        <% } %>
        <% } %>
        <% if (deviantartimages.length > 10) { %>
        <br>
        <br>
        <a href = "http://www.<%= deviantartusername%>.deviantart.com/gallery"><button type="button" class="btn btn-success">Full Gallery</button></a>
        <% } %>
        <br>
        
        <% } else { %>
        <div> A DeviantArt account is not associated with this profile.</div>
        <% } %>
        <br>
        <!--deviantartend -->
        <h4>Tumblr<h4>
        <br>
        <% if (notFan) { %>
        <form method="post" role="form" class="login-form form-horizontal">
            <div class="form-group">
                &nbsp &nbsp
                <button type="submit" class="login btn btn-primary">Become a Fan of this user</button>
            </div>
        </form>
        <% } else { %>
        <div> You are a fan of this user.</div>
        <% } %>
        <br>
    </div>
    <div class="col-lg-6">
        <h4><%= userName%>'s Fans</h4>
        <% for (var i = 0; i < fans.length; i++) { %>
        <a href="../users/<%= fans[i] %>"><%= fans[i] %></a><br>
        <% } %>
        <h4><%= userName%> is Following</h4>
        <% for (var j = 0; j < following.length; j++) { %>
        <a href="../users/<%= following[j] %>"><%= following[j] %></a><br>
        <% } %>
        <br>
        <h4><%= userName%>'s Favourite Comics</h4>
        <% for (var j = 0; j < favourites.length; j++) { %>
        <a href="../comic/<%= favourites[j] %>"><%= favouriteTitles[j] %></a><br>
        <% } %>
    </div>
</div>
</body>
</html>