html
    head
        title=title
        link(
        href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
        rel='stylesheet'
        )
    body
        div.container

            div.page-header
                h1 Register your account

            if errors
                each error in errors
                    div.alert.alert-danger
                        span #{error.error}
            if saved
                div.alert.alert-success
                    span Your profile has been saved
            form.login-form.form-horizontal(method='post', role='form')
                input(name='_csrf', type='hidden', value=csrfToken)

                div.form-group
                    label.col-sm-4 Username
                    div.col-sm-8
                        input.form-control(
                        placeholder='username',
                        required=true,
                        name='username',
                        type='text',
                        value=username)
                div.form-group
                    label.col-sm-4 Password
                    div.col-sm-8
                        input.form-control(placeholder='6-20 digits password',
                        required=true,
                        name='password',
                        type='text',
                        value=password)
                div.form-group
                    label.col-sm-4 Confirm Password
                    div.col-sm-8
                        input.form-control(placeholder='confirm password',
                        required=true,
                        name='confirmpassword',
                        type='text',
                        value=confirmpassword)
                div.form-group
                    div.col-sm-offset-4.col-sm-8
                        button.login.btn.btn-primary(type='submit') Register
                div.pull-right
                    a(href="/") Return to home page