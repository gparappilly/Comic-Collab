<body>
<div class="container">
    <div class="page-header">
        <h1>Edit Your Profile</h1>
    </div>
    <form method="post" role="form" class="login-form form-horizontal">
        <input name="_csrf" type="hidden"/>
        <div class="form-group">
            <label class="col-sm-4">Full Name</label>
            <div class="col-sm-8">
                <input placeholder="full name" name="fullname" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">Age</label>
            <div class="col-sm-8">
                <input placeholder="age" name="age" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">Gender</label>
            <div class="col-sm-8">
                <input placeholder="gender" name="gender" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">Location</label>
            <div class="col-sm-8">
                <input placeholder="location" name="location" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">About Me</label>
            <div class="col-sm-8">
                <input placeholder="about me" name="aboutme" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">DeviantArt Username</label>
            <div class="col-sm-8">
                <input placeholder="DeviantArt Username" name="deviantartusername" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="login btn btn-primary">Save</button>
            </div>
        </div>
        <div class="pull-right">
            <a href="/myprofile">Return to Your Profile</a>
        </div>
    </form>
